{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MarkPix",
  "version": "0.5.5",
  "identifier": "com.snemc.markpix",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MarkPix",
        "width": 1200,
        "height": 800,
        "minWidth": 1050,
        "minHeight": 500,
        "center": true,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "dragDropEnabled": true,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
